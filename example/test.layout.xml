<layout>
        <circle x="eval(3840*(video_time%15)/15.0)" y="100" radius="10"
                color="white" border-width="2" border-color="black"/>
        <circle x="1920" y="200" radius="key(video_time)"
                color="red" border-width="4" border-color="black"/>

        <circle x="150" y="400" radius="140"
                color="rgba(1, 0, 0, 0.5)" border-width="5" border-color="black"/>
        <circle x="450" y="400" radius="140"
                color="rgb(0, 1, 0)" border-width="5" border-color="black"/>
        <circle x="750" y="400" radius="140"
                color="rgb(0, 0, 1)" border-width="5" border-color="black"/>

        <circle x="1050" y="400" radius="140"
                color="rgb(eval((video_time%5)/5.0), 0, 0)" border-width="5" border-color="black"/>
        <circle x="1350" y="400" radius="140"
                color="rgb(0, eval(1-(video_time%5.0)/5.0), 0)" border-width="5" border-color="black"/>
        <circle x="1650" y="400" radius="140"
                color="rgb(0, 0, eval(video_time%1.0))" border-width="5" border-color="black"/>

        <circle x="100" y="650" radius="40" color="white" border-width="5" border-color="black"
                visible="true"/> <!-- always visible -->
        <circle x="200" y="650" radius="40" color="white" border-width="5" border-color="black"
                visible="false"/> <!-- never visible -->
        <circle x="300" y="650" radius="40" color="white" border-width="5" border-color="black"
                visible="yes"/> <!-- always visible -->
        <circle x="400" y="650" radius="40" color="white" border-width="5" border-color="black"
                visible="no"/> <!-- never visible -->
        <circle x="500" y="650" radius="40" color="white" border-width="5" border-color="black"
                visible="some string"/> <!-- always visible -->
        <circle x="600" y="650" radius="40" color="white" border-width="5" border-color="black"
                visible=""/> <!-- never visible -->
        <circle x="700" y="650" radius="40" color="green" border-width="5" border-color="black"
                visible="1"/> <!-- always visible -->
        <circle x="800" y="650" radius="40" color="green" border-width="5" border-color="black"
                visible="0"/> <!-- never visible -->
        <circle x="900" y="650" radius="40" color="yellow" border-width="5" border-color="black"
                visible="key(point_timer)"/> <!-- visible if point_timer non-zero -->
        <circle x="1000" y="650" radius="40" color="yellow" border-width="5" border-color="black"
                visible="exists(point_timer)"/> <!-- visible if point_timer key exists (1s earlier than above one) -->
        <circle x="1100" y="650" radius="40" color="white" border-width="5" border-color="black"
                visible="not(false)"/> <!-- always visible -->
        <circle x="1200" y="650" radius="40" color="white" border-width="5" border-color="black"
                visible="not(true)"/> <!-- never visible -->
        <circle x="1300" y="650" radius="40" color="red" border-width="5" border-color="black"
                visible="eval(point_timer%2)"/> <!-- visible on odd seconds -->
        <circle x="1400" y="650" radius="40" color="blue" border-width="5" border-color="black"
                visible="not(eval(point_timer%2))"/> <!-- visible on even seconds -->

        <if condition="eval(round(video_time)%2)"><!-- visible every second for 1 second offset by 0.5s -->
            <circle x="1500" y="650" radius="40" color="pink" border-width="5" border-color="black"/>
        </if>
